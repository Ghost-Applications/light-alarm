<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/test_alarm_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Test Alarm Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/test_crash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test Crash"
        app:layout_constraintEnd_toEndOf="@+id/test_alarm_notification"
        app:layout_constraintStart_toStartOf="@+id/test_alarm_notification"
        app:layout_constraintTop_toBottomOf="@+id/test_alarm_notification" />

    <Button
        android:id="@+id/turn_on_flashlight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Turn on Flashlight"
        app:layout_constraintEnd_toEndOf="@+id/test_crash"
        app:layout_constraintStart_toStartOf="@+id/test_crash"
        app:layout_constraintTop_toBottomOf="@+id/test_crash" />

    <Button
        android:id="@+id/test_scheduler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test Scheduler"
        app:layout_constraintEnd_toEndOf="@+id/turn_on_flashlight"
        app:layout_constraintStart_toStartOf="@+id/turn_on_flashlight"
        app:layout_constraintTop_toBottomOf="@+id/turn_on_flashlight" />
</androidx.constraintlayout.widget.ConstraintLayout>
